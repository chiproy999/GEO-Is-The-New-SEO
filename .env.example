# Database
DATABASE_URL=postgresql://user:password@localhost:5432/geo_db

# Server
PORT=5000
NODE_ENV=development

# Public URL (used for SSR/build-time URL generation)
VITE_PUBLIC_URL=https://your-production-domain.com

# Optional (Replit)
# REPL_ID=
# Database Configuration
# PostgreSQL connection string for production database
# Example: postgresql://user:password@host:5432/database
# For Vercel, use Vercel Postgres or Neon for serverless PostgreSQL
DATABASE_URL=

# Session Configuration
# Secret key for session encryption - MUST be changed in production
SESSION_SECRET=your-secret-key-here

# Whether session cookies should be secure (HTTPS only)
# Set to "true" in production with HTTPS (Vercel automatically provides HTTPS)
SESSION_COOKIE_SECURE=true

# Google Analytics (optional)
# Get from Google Analytics dashboard
VITE_GA_MEASUREMENT_ID=

# Server Configuration
# Port to run the server on (default: 5000)
# Note: Vercel automatically handles port configuration
PORT=5000

# Node environment
NODE_ENV=production
