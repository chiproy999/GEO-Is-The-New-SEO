# Database Configuration
# PostgreSQL connection string for production database
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=

# Session Configuration
# Secret key for session encryption - MUST be changed in production
SESSION_SECRET=your-secret-key-here

# Whether session cookies should be secure (HTTPS only)
# Set to "true" in production with HTTPS
SESSION_COOKIE_SECURE=false

# Replit Authentication (if using Replit deployment)
# Comma-separated list of Replit domains for authentication
REPLIT_DOMAINS=

# Google Analytics (optional)
# Get from Google Analytics dashboard
VITE_GA_MEASUREMENT_ID=

# Server Configuration
# Port to run the server on (default: 5000)
PORT=5000

# Node environment
NODE_ENV=production
